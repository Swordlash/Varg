import "Std.Base"
import "Std.Functor"

template Maybe a implementing Functor Maybe where
    Nothing
    Just has
        value : a

    function get : a = this.value
    
    implement function fmap <b> (f: Function a b) : Maybe b = 
        match this with
            Maybe.Nothing -> Maybe.Nothing
            Maybe.Just val -> Maybe.Just $ f val
